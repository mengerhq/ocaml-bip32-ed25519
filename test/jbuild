(jbuild_version 1)

(executable
 ((name test)
  (libraries (hex nocrypto bip32-ed25519 alcotest))
  (modules (Test))))


(executable
 ((name test_vector)
  (libraries (hex bip32-ed25519 nocrypto ezjsonm ocplib-json-typed))
  (modules (Test_vector))))

(alias
 ((name    runtest_bip32_ed25519_basic)
  (deps    (test.exe))
  (action  (run ${<}))))

(alias
 ((name	   runtest_bip32_ed25519_vectors)
  (deps    (test_vector.exe test_vectors/test_vectors.json))
  (action  (run ${^}))))

(alias
 ((name runtest)
  (deps ((alias runtest-basic)))))

